    agent any

    stages {
        stage('Build') {
            steps {
                echo 'build app'
            }
        }
        
        
        
        stage('test') {
            steps {
                echo 'test app'
            }
        }
        
        
        stage('deploy') {
            steps {
                echo 'deploy app'
            }
        }
    }
post {
    always {
emailext body: 'summary', subject: 'subject pipeline', to: 'zayneblahmedy1@gmail.com'    }
}


